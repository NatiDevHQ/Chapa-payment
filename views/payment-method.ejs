<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment Method</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: "#000000",
              secondary: "#ffffff",
              accent: "#404040",
              light: "#f8f8f8",
              dark: "#1a1a1a",
            },
          },
        },
      };
    </script>
  </head>
  <body
    class="bg-gradient-to-br from-gray-100 to-gray-200 min-h-screen flex items-center justify-center p-6"
  >
    <div class="max-w-6xl w-full">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Payment Method</h1>
        <p class="text-xl text-gray-600">Choose how you'd like to pay</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Order Summary -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-200">
          <h2
            class="text-2xl font-bold text-gray-900 mb-6 border-b border-gray-300 pb-4"
          >
            Order Summary
          </h2>

          <div class="bg-gray-50 rounded-xl p-6 mb-6 border border-gray-200">
            <div class="text-2xl font-bold text-gray-900 mb-2">
              <%= plan %> Plan
            </div>
            <div class="text-3xl font-bold text-gray-900">
              <%= amount %> ETB
            </div>
          </div>

          <div class="mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
              What's included:
            </h3>
            <ul class="space-y-3">
              <li class="flex items-center text-gray-700">
                <i class="fas fa-check-circle text-black mr-3"></i>
                <span>Full access to selected features</span>
              </li>
              <li class="flex items-center text-gray-700">
                <i class="fas fa-check-circle text-black mr-3"></i>
                <span>24/7 customer support</span>
              </li>
              <li class="flex items-center text-gray-700">
                <i class="fas fa-check-circle text-black mr-3"></i>
                <span>Regular updates and maintenance</span>
              </li>
              <li class="flex items-center text-gray-700">
                <i class="fas fa-check-circle text-black mr-3"></i>
                <span>Secure payment processing</span>
              </li>
              <li class="flex items-center text-gray-700">
                <i class="fas fa-check-circle text-black mr-3"></i>
                <span>30-day money back guarantee</span>
              </li>
            </ul>
          </div>

          <div
            class="bg-gray-100 border border-gray-300 rounded-xl p-4 text-center"
          >
            <div class="flex items-center justify-center text-gray-800 mb-2">
              <i class="fas fa-shield-alt text-xl mr-2"></i>
              <span class="font-semibold"
                >Your payment is secure and encrypted</span
              >
            </div>
          </div>
        </div>

        <!-- Payment Methods -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-200">
          <h2
            class="text-2xl font-bold text-gray-900 mb-6 border-b border-gray-300 pb-4"
          >
            Choose Payment Method
          </h2>

          <!-- Chapa Pay Option -->
          <div
            class="payment-option border-2 border-black bg-gray-50 rounded-xl p-6 mb-4 cursor-pointer transform transition-all duration-300 hover:scale-105"
            onclick="selectPayment('chapa')"
          >
            <div class="flex items-center">
              <div
                class="w-12 h-12 bg-black rounded-full flex items-center justify-center text-white text-xl mr-4 border border-gray-300"
              >
                <i class="fas fa-globe"></i>
              </div>
              <div class="flex-1">
                <div class="font-bold text-gray-900 text-lg">Chapa Pay</div>
                <div class="text-gray-600">Secure payment via Chapa</div>
              </div>
              <div
                class="w-6 h-6 rounded-full border-2 border-black flex items-center justify-center"
              >
                <div class="w-3 h-3 rounded-full bg-black payment-radio"></div>
              </div>
            </div>
          </div>

          <!-- Other Payment Options -->
          <div
            class="payment-option border-2 border-gray-300 rounded-xl p-6 mb-4 cursor-pointer transform transition-all duration-300 hover:scale-105 opacity-60"
            onclick="selectPayment('bank')"
          >
            <div class="flex items-center">
              <div
                class="w-12 h-12 bg-gray-400 rounded-full flex items-center justify-center text-white text-xl mr-4"
              >
                <i class="fas fa-university"></i>
              </div>
              <div class="flex-1">
                <div class="font-semibold text-gray-800 text-lg">
                  Bank Transfer
                </div>
                <div class="text-gray-600">
                  Direct bank transfer (Coming soon)
                </div>
              </div>
            </div>
          </div>

          <div
            class="payment-option border-2 border-gray-300 rounded-xl p-6 mb-6 cursor-pointer transform transition-all duration-300 hover:scale-105 opacity-60"
            onclick="selectPayment('mobile')"
          >
            <div class="flex items-center">
              <div
                class="w-12 h-12 bg-gray-400 rounded-full flex items-center justify-center text-white text-xl mr-4"
              >
                <i class="fas fa-mobile-alt"></i>
              </div>
              <div class="flex-1">
                <div class="font-semibold text-gray-800 text-lg">
                  Mobile Money
                </div>
                <div class="text-gray-600">
                  Telebirr & other mobile wallets (Coming soon)
                </div>
              </div>
            </div>
          </div>

          <!-- Chapa Payment Form -->
          <form id="chapaForm" action="/api/pay" method="POST">
            <input type="hidden" name="amount" value="<%= amount %>" />
            <input type="hidden" name="plan" value="<%= plan %>" />
            <input type="hidden" name="sessionId" value="<%= sessionId %>" />
            <button
              type="submit"
              id="payButton"
              class="w-full bg-black hover:bg-gray-800 text-white font-bold py-4 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl text-lg border border-gray-800"
            >
              <i class="fas fa-lock mr-2"></i>Pay <%= amount %> ETB with Chapa
            </button>
          </form>

          <!-- Navigation -->
          <div class="flex justify-between mt-6">
            <a
              href="/plans"
              class="inline-flex items-center bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 px-6 rounded-xl transition-all duration-300 border border-gray-700"
            >
              <i class="fas fa-arrow-left mr-2"></i>Back to Plans
            </a>
          </div>
        </div>
      </div>
    </div>

    <script>
      function selectPayment(method) {
        document.querySelectorAll(".payment-option").forEach((option) => {
          option.classList.remove("border-black", "bg-gray-50");
          option.classList.add("border-gray-300");

          const radio = option.querySelector(".payment-radio");
          if (radio) {
            radio.classList.remove("bg-black");
          }
        });

        const payButton = document.getElementById("payButton");

        if (method === "chapa") {
          event.currentTarget.classList.remove("border-gray-300");
          event.currentTarget.classList.add("border-black", "bg-gray-50");

          const radio = event.currentTarget.querySelector(".payment-radio");
          if (radio) {
            radio.classList.add("bg-black");
          }

          payButton.disabled = false;
          payButton.classList.remove("bg-gray-400", "cursor-not-allowed");
          payButton.classList.add("bg-black", "hover:bg-gray-800");
          payButton.innerHTML = `<i class="fas fa-lock mr-2"></i>Pay <%= amount %> ETB with Chapa`;
        } else {
          payButton.disabled = true;
          payButton.classList.remove("bg-black", "hover:bg-gray-800");
          payButton.classList.add("bg-gray-400", "cursor-not-allowed");
          payButton.innerHTML = `<i class="fas fa-clock mr-2"></i>Payment Method Coming Soon`;
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        selectPayment("chapa");
      });
    </script>
  </body>
</html>
