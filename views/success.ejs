<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment Successful - Talmid Solutions</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: "#000000",
              secondary: "#ffffff",
              accent: "#404040",
              light: "#f8f8f8",
              dark: "#1a1a1a",
            },
          },
        },
      };
    </script>
  </head>
  <body
    class="bg-gradient-to-br from-green-50 to-blue-50 min-h-screen flex items-center justify-center p-6"
  >
    <div class="max-w-2xl w-full">
      <div
        class="bg-white rounded-2xl shadow-2xl p-8 text-center relative overflow-hidden border border-gray-200"
      >
        <!-- Confetti Container -->
        <div
          id="confetti-container"
          class="absolute inset-0 pointer-events-none"
        ></div>

        <!-- Success Icon -->
        <div
          class="w-24 h-24 bg-gradient-to-r from-green-500 to-blue-500 rounded-full flex items-center justify-center mx-auto mb-6 text-4xl text-white animate-bounce border-4 border-white shadow-lg"
        >
          <i class="fas fa-check"></i>
        </div>

        <!-- Success Title -->
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          Payment Successful!
        </h1>
        <p class="text-xl text-gray-600 mb-8">Thank you for your purchase</p>

        <!-- Transaction Details -->
        <div
          class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-xl p-6 mb-8 text-left border border-blue-200"
        >
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex justify-between py-2 border-b border-blue-300">
              <span class="font-semibold text-gray-800">Transaction ID:</span>
              <span class="text-gray-600 font-mono text-sm"
                ><%= transaction.transactionId %></span
              >
            </div>
            <div class="flex justify-between py-2 border-b border-blue-300">
              <span class="font-semibold text-gray-800">Plan:</span>
              <span class="text-gray-600"><%= transaction.plan %></span>
            </div>
            <div class="flex justify-between py-2 border-b border-blue-300">
              <span class="font-semibold text-gray-800">Amount:</span>
              <span class="text-gray-900 font-bold"
                ><%= transaction.amount %> ETB</span
              >
            </div>
            <div class="flex justify-between py-2 border-b border-blue-300">
              <span class="font-semibold text-gray-800">Payment Method:</span>
              <span class="text-gray-600"><%= transaction.method %></span>
            </div>
            <div
              class="flex justify-between py-2 border-b border-blue-300 md:col-span-2"
            >
              <span class="font-semibold text-gray-800">Date & Time:</span>
              <span class="text-gray-600"><%= transaction.date %></span>
            </div>
            <div class="flex justify-between py-2 md:col-span-2">
              <span class="font-semibold text-gray-800">Status:</span>
              <span
                class="bg-gradient-to-r from-green-500 to-blue-500 text-white px-3 py-1 rounded-full text-sm font-bold"
              >
                <%= transaction.status %>
              </span>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
          <button
            onclick="downloadPDFReceipt()"
            class="bg-white border-2 border-blue-500 text-blue-600 hover:bg-blue-50 font-bold py-4 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 flex items-center justify-center"
          >
            <i class="fas fa-file-pdf mr-2"></i>Download PDF Receipt
          </button>
          <a
            href="/"
            class="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-bold py-4 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 flex items-center justify-center border border-transparent"
          >
            <i class="fas fa-home mr-2"></i>Return to Dashboard
          </a>
        </div>

        <!-- Thank You Message -->
        <div class="border-t border-gray-300 pt-6">
          <div class="space-y-2 text-gray-600">
            <p class="flex items-center justify-center">
              <i class="fas fa-envelope text-blue-600 mr-2"></i>
              A confirmation email has been sent to your email address
            </p>
            <p class="flex items-center justify-center">
              <i class="fas fa-bolt text-purple-600 mr-2"></i>
              Your account will be activated immediately
            </p>
            <p class="flex items-center justify-center">
              <i class="fas fa-headset text-blue-700 mr-2"></i>
              Need help? Contact our support team
            </p>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Create confetti effect
      function createConfetti() {
        const container = document.getElementById("confetti-container");
        const symbols = ["●", "■", "▲", "◆"];
        const colors = ["#3B82F6", "#8B5CF6", "#10B981", "#6366F1"];

        for (let i = 0; i < 30; i++) {
          const confetti = document.createElement("div");
          confetti.className = "absolute text-lg animate-bounce";
          confetti.style.left = Math.random() * 100 + "vw";
          confetti.style.top = "-20px";
          confetti.style.color =
            colors[Math.floor(Math.random() * colors.length)];
          confetti.style.animationDelay = Math.random() * 3 + "s";
          confetti.style.opacity = "0.8";
          confetti.textContent =
            symbols[Math.floor(Math.random() * symbols.length)];
          container.appendChild(confetti);
        }
      }

      // Download PDF receipt
      function downloadPDFReceipt() {
        const sessionId = "<%= sessionId %>";

        // Open receipt in new tab for printing/download as PDF
        const receiptWindow = window.open(
          `/api/generate-receipt?session=${sessionId}`,
          "_blank"
        );

        // The receipt HTML has auto-print and auto-close functionality
        // Users can choose "Save as PDF" when printing
      }

      // Initialize confetti
      document.addEventListener("DOMContentLoaded", createConfetti);
    </script>
  </body>
</html>
