<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment Successful</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-gradient-to-br from-green-400 to-blue-500 min-h-screen flex items-center justify-center p-6"
  >
    <div class="max-w-2xl w-full">
      <div
        class="bg-white rounded-2xl shadow-2xl p-8 text-center relative overflow-hidden"
      >
        <!-- Confetti Container -->
        <div
          id="confetti-container"
          class="absolute inset-0 pointer-events-none"
        ></div>

        <!-- Success Icon -->
        <div
          class="w-24 h-24 bg-gradient-to-br from-green-400 to-green-600 rounded-full flex items-center justify-center mx-auto mb-6 text-4xl text-white animate-bounce"
        >
          <i class="fas fa-check"></i>
        </div>

        <!-- Success Title -->
        <h1 class="text-4xl font-bold text-gray-800 mb-4">
          Payment Successful!
        </h1>
        <p class="text-xl text-gray-600 mb-8">Thank you for your purchase</p>

        <!-- Transaction Details -->
        <div class="bg-gray-50 rounded-xl p-6 mb-8 text-left">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex justify-between py-2 border-b">
              <span class="font-semibold text-gray-700">Transaction ID:</span>
              <span class="text-gray-600 font-mono text-sm"
                ><%= transaction.transactionId %></span
              >
            </div>
            <div class="flex justify-between py-2 border-b">
              <span class="font-semibold text-gray-700">Plan:</span>
              <span class="text-gray-600"><%= transaction.plan %></span>
            </div>
            <div class="flex justify-between py-2 border-b">
              <span class="font-semibold text-gray-700">Amount:</span>
              <span class="text-green-600 font-bold"
                ><%= transaction.amount %> ETB</span
              >
            </div>
            <div class="flex justify-between py-2 border-b">
              <span class="font-semibold text-gray-700">Payment Method:</span>
              <span class="text-gray-600"><%= transaction.method %></span>
            </div>
            <div class="flex justify-between py-2 border-b md:col-span-2">
              <span class="font-semibold text-gray-700">Date & Time:</span>
              <span class="text-gray-600"><%= transaction.date %></span>
            </div>
            <div class="flex justify-between py-2 md:col-span-2">
              <span class="font-semibold text-gray-700">Status:</span>
              <span
                class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold"
              >
                <%= transaction.status %>
              </span>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
          <button
            onclick="generateReceipt()"
            class="bg-white border-2 border-blue-500 text-blue-500 hover:bg-blue-50 font-semibold py-4 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 flex items-center justify-center"
          >
            <i class="fas fa-receipt mr-2"></i>Download Receipt
          </button>
          <a
            href="/"
            class="bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 flex items-center justify-center"
          >
            <i class="fas fa-home mr-2"></i>Return to Dashboard
          </a>
        </div>

        <!-- Thank You Message -->
        <div class="border-t pt-6">
          <div class="space-y-2 text-gray-600">
            <p class="flex items-center justify-center">
              <i class="fas fa-envelope text-blue-500 mr-2"></i>
              A confirmation email has been sent to your email address
            </p>
            <p class="flex items-center justify-center">
              <i class="fas fa-bolt text-green-500 mr-2"></i>
              Your account will be activated immediately
            </p>
            <p class="flex items-center justify-center">
              <i class="fas fa-headset text-purple-500 mr-2"></i>
              Need help? Contact our support team
            </p>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Create confetti effect
      function createConfetti() {
        const container = document.getElementById("confetti-container");
        const colors = ["#10B981", "#3B82F6", "#8B5CF6", "#EF4444", "#F59E0B"];

        for (let i = 0; i < 50; i++) {
          const confetti = document.createElement("div");
          confetti.className = "absolute w-4 h-4 rounded-full animate-bounce";
          confetti.style.left = Math.random() * 100 + "vw";
          confetti.style.top = "-20px";
          confetti.style.background =
            colors[Math.floor(Math.random() * colors.length)];
          confetti.style.animationDelay = Math.random() * 3 + "s";
          confetti.style.opacity = "0.8";
          container.appendChild(confetti);
        }
      }

      // Generate PDF receipt
      function generateReceipt() {
        const sessionId = "<%= sessionId %>";

        fetch(`/api/generate-receipt?session=${sessionId}`)
          .then((response) => response.json())
          .then((data) => {
            alert(
              "Receipt generated successfully! In a real application, this would download a PDF."
            );
            console.log("Receipt data:", data);
          })
          .catch((error) => {
            console.error("Error generating receipt:", error);
            alert("Error generating receipt. Please try again.");
          });
      }

      // Initialize confetti
      document.addEventListener("DOMContentLoaded", createConfetti);
    </script>
  </body>
</html>
