<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Payment Success</title>
    <style>
      body {
        font-family: Arial;
        background: #f9f9f9;
        padding: 20px;
      }
      .receipt {
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 10px;
        max-width: 400px;
        margin: auto;
      }
      button {
        margin: 5px;
        padding: 10px 15px;
        cursor: pointer;
        border: none;
        border-radius: 5px;
      }
    </style>
  </head>
  <body>
    <div class="receipt">
      <h2>Payment Successful!</h2>
      <p>Transaction ID: <span id="trxId"></span></p>
      <p>Plan: <span id="plan"></span></p>
      <p>Amount: <span id="amount"></span> ETB</p>
      <p>Method: Demo Payment</p>
      <p>Date: <span id="date"></span></p>
      <button onclick="downloadReceipt()">Download Receipt</button>
      <button onclick="returnDashboard()">Return to Dashboard</button>
    </div>

    <script>
      const urlParams = new URLSearchParams(window.location.search);
      const plan = urlParams.get("plan");
      const amount = urlParams.get("amount");
      const trxId = "DEMO-" + Date.now();
      const date = new Date().toLocaleString();

      document.getElementById("trxId").innerText = trxId;
      document.getElementById("plan").innerText = plan;
      document.getElementById("amount").innerText = amount;
      document.getElementById("date").innerText = date;

      function downloadReceipt() {
        const text = `Transaction ID: ${trxId}\nPlan: ${plan}\nAmount: ${amount} ETB\nMethod: Demo Payment\nDate: ${date}`;
        const blob = new Blob([text], { type: "text/plain" });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "receipt.txt";
        a.click();
        URL.revokeObjectURL(url);
      }

      function returnDashboard() {
        localStorage.setItem("paymentStatus", "paid");
        window.location.href = "/";
      }
    </script>
  </body>
</html>
